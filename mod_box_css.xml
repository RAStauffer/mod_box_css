<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5.0" client="site" method="upgrade">
	<name>Box CSS</name>
	<author>Ron Stauffer</author>
	<version>1.0.4</version>
	<description>Box CSS Module</description>
	<files>
		<filename>mod_box_css.xml</filename>
		<filename module="mod_box_css">mod_box_css.php</filename>
		<filename>index.html</filename>
		<filename>helper.php</filename>
		<filename>tmpl/default.php</filename>
		<filename>tmpl/index.html</filename>
		<filename>tmpl/css/mod_box_css.css</filename>
		<filename>tmpl/css/index.html</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="HTML">
				<field name="codeeditor" type="textarea" filter="raw" default=""
					label="BOX_HTML" description="BOX_HTML_DESC" cols="50" rows="12">
				</field>
				<field name="box_cssID" type="text" filter="raw" default=""
					label="BOX_CSS_ID" description="BOX_CSS_ID_DESC">
				</field>
				<field name="box_css" type="textarea" filter="raw" default=""
					label="BOX_CSS" description="BOX_CSS_DESC" cols="50" rows="12">
				</field>
			</fieldset>
		</fields>
	</config>
</extension>